<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ac.project_abel.ClassDetails"
    tools:showIn="@layout/activity_class_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="C.A"
            android:textColor="?attr/colorAccent"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_ca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="?attr/colorAccent"
                app:cpb_background_progressbar_width="5dp"


                app:cpb_progress="0"
                app:cpb_progressbar_color="?attr/colorPrimary"
                app:cpb_progressbar_width="10dp" />

            <TextView
                android:id="@+id/grdtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:text="0.0"
                android:textColor="?attr/colorAccent"
                android:textSize="30sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Assignment 1"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_ass1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="?attr/colorAccent"
                app:cpb_background_progressbar_width="5dp"


                app:cpb_progress="0"
                app:cpb_progressbar_color="?attr/colorPrimary"
                app:cpb_progressbar_width="10dp" />

            <TextView
                android:id="@+id/ass1text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:text="0.0"
                android:textColor="?attr/colorAccent"
                android:textSize="30sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Practical"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_practical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="?attr/colorAccent"
                app:cpb_background_progressbar_width="5dp"


                app:cpb_progress="0"
                app:cpb_progressbar_color="?attr/colorPrimary"
                app:cpb_progressbar_width="10dp" />

            <TextView
                android:id="@+id/grdpractical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:text="0.0"
                android:textColor="?attr/colorAccent"
                android:textSize="30sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mid-Exam"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="?attr/colorAccent"
                app:cpb_background_progressbar_width="5dp"


                app:cpb_progress="0"
                app:cpb_progressbar_color="?attr/colorPrimary"
                app:cpb_progressbar_width="10dp" />

            <TextView
                android:id="@+id/grdmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:text="0.0"
                android:textColor="?attr/colorAccent"
                android:textSize="30sp" />
        </FrameLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
